@model IEnumerable<WebApplication.Models.Student>

@{
    ViewData["Title"] = "Student List";
}

@section scripts{
    <script type="text/javascript" src="@Url.Content("~/Scripts/") jquery-1.10.2.js">
    </script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#checkBoxAll').click(function () {
                if ($(this).is(":checked"))
                    $('.chkCheckBoxId').prop('checked', true);
                else
                    $('.chkCheckBoxId').prop('checked', false);
            });
        });
    </script>
    <script type="text/javascript">
        $("#btndelete").click(function () {
            $("input[type='checkbox']:checked").remove();
        })
    </script>



}
<h1>
    All Student List
</h1>

<p class="float-right">
    <a asp-action="Create" class="btn btn-primary">Add New Student</a>
</p>



<table class="table">
    <thead>
        <tr>
            <th><input type="checkbox" id="checkBoxAll" /> Select All </th>

            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th>Actions</th>
            <th>
                <input type="submit" id="btndelete" value="Delete" asp-action="DeleteStudent" />
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>

                    <input type="checkbox" class="chkCheckBoxId"
                           value="@item.ID" name="studentId" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department)
                </td>

                <td>
                    @Html.ActionLink("Edit", "Create", new { id = item.ID, item.FirstName, item.LastName, item.Address, item.Email, item.Phone, item.DepID }, new { @class = "btn btn-success" }) |
                    @Html.ActionLink("Delete", "DeleteStudent", new { id = item.ID }, new { @class = "btn btn-danger", onclick = "return confirm('Delete this record?')" })

                </td>
                

            </tr>
        }
    </tbody>
</table>



